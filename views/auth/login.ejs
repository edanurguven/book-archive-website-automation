<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs') %>
  <body>
    <%- include('../partials/header.ejs') %>
    <div class="contact_section layout_padding">
      <div class="container">
        <h1 class="contact_text">Giriş Yap</h1>
      </div>
    </div>
    <div class="contact_section_2" style="padding-top: 70px">
      <div class="">
        <div class="row">
          <div class="col-md-3"></div>
          <div class="col-md-6">
            <div class="mail_section">
              <form action="#" method="post">
                <input type="hidden" name="_csrf" value="<%=csrfToken%>" />
                <% if (typeof(message)!="undefined") { %>
                <div class="alert alert-<%=message.class%>">
                  <%=message.text %>
                </div>
                <% } %>
                <div class="email_text" style="text-align: center">
                  <div class="form-group" style="width: 500px">
                    <input
                      type="text"
                      class="email-bt"
                      placeholder="email"
                      name="email"
                    />
                  </div>
                  <div class="form-group" style="width: 500px">
                    <input
                      type="password"
                      class="email-bt"
                      placeholder="password"
                      name="password"
                    />
                  </div>
                  <div class="form-group" style="width: 500px">
                    <select class="form-control" name="role">
                      <option value="user">User</option>
                      <option value="admin">Admin</option>
                    </select>
                  </div>
                  <div class="send_btn">
                    <button type="submit" class="main_bt">Giriş Yap</button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include('../partials/info.ejs') %> <%-include('../partials/footer.ejs')
    %> <%- include('../partials/script.ejs')%>
  </body>
</html>
